generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============== Auth Models ==============

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?  @map("email_verified")
  password      String?    @default("")
  image         String?    @map("avatar")
  bio           String?
  role          UserRole   @default(USER)
  status        UserStatus @default(ACTIVE)
  phone         String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations with Cascade
  accounts Account[]
  sessions Session[]
  posts    Post[]
  sms      Sms[]
  comments Comment[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============== Content Models ==============

model Category {
  id          String       @id @default(cuid())
  name        String       @unique
  nameEn      String?      @map("name_en")
  slug        String       @unique
  description String?
  type        CategoryType @default(POST)

  // New SEO Fields
  metaTitle       String? @map("meta_title")
  metaDescription String? @map("meta_description")
  tags            String? // Stored as a comma-separated string

  subCategories SubCategory[]
  posts         Post[]
  sms           Sms[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([slug])
  @@map("categories")
}

model SubCategory {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?

  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  posts Post[]
  sms   Sms[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([categoryId, slug])
  @@map("sub_categories")
}

model Post {
  id          String  @id @default(cuid())
  title       String
  titleEn     String? @map("title_en")
  slug        String  @unique
  content     String  @db.Text
  contentHtml String  @map("content_html") @db.Text
  image       String?

  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  subCategoryId String?      @map("sub_category_id")
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)

  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  status      PostStatus @default(DRAFT)
  views       Int        @default(0)
  likeCount   Int        @default(0) @map("like_count")
  comments    Comment[]
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  scheduledAt DateTime?  @map("scheduled_at")

  @@unique([authorId, slug])
  @@index([status])
  @@map("posts")
}

model Comment {
  id      String @id @default(cuid())
  content String @db.Text

  // Relations
  postId String @map("post_id")
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Optional: Link to a registered user
  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Fields for guest commenters
  authorName  String? @map("author_name")
  authorEmail String? @map("author_email")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([postId])
  @@map("comments")
}

model Sms {
  id      String  @id @default(cuid())
  title   String?
  slug    String  @unique
  content String  @db.Text

  categoryId String   @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  subCategoryId String?      @map("sub_category_id")
  subCategory   SubCategory? @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)

  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  status       PostStatus @default(PUBLISHED)
  views        Int        @default(0)
  likeCount    Int        @default(0) @map("like_count")
  disLikeCount Int        @default(0) @map("dislike_count")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([categoryId])
  @@map("sms_messages")
}

model Setting {
  id Int @id @default(1)

  // Branding & Identity
  siteName  String  @default("BDBOYS.top")
  siteUrl   String? @default("https://bdboys.top")
  siteEmail String?
  siteLogo  String? // URL to the logo image

  // SEO Configuration
  description String  @default("Best Bangla SMS Collection")
  keywords    String  @default("sms, bangla, tunes")
  googleMeta  String? @db.Text // Verification code

  // Social & Analytics
  facebookUrl  String?
  fbAdminId    String?
  fbAppId      String?
  googlePlusId String?
  analyticsId  String?

  updatedAt DateTime @updatedAt
}

model Ad {
  id        String  @id @default(cuid())
  name      String // Display name for the dashboard
  placement String  @unique // e.g., "header_ad", "after_article"
  code      String? @db.Text // The script or HTML code
  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ads")
}

// ============== Enums ==============

enum CategoryType {
  POST
  SMS
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
  AUTHOR
  CONTRIBUTOR
  USER
}

enum UserStatus {
  ACTIVE
  PENDING
  SUSPENDED
  BANNED
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
  SCHEDULED
  ARCHIVED
  DELETED
}
